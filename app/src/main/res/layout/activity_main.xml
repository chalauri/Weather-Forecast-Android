<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ge.gchalauri.weatherapp.weatherapi.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:hint="აირჩიეთ ქალაქი" />

        <Button
            android:id="@+id/currlocation"
            android:layout_width="30dp"
            android:layout_height="69dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.26"
            android:width="5dp"
            android:background="@drawable/here" />

        <Button
            android:id="@+id/find"
            android:layout_width="30dp"
            android:layout_height="69dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.34"
            android:width="5dp"
            android:background="@drawable/search"
            android:onClick="search"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="81dp"
            android:layout_height="78dp"
            android:layout_weight="1"
            android:src="@drawable/sunny" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="78dp"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:text="15 ℃	"
            android:textColor="#000000"
            android:textSize="70sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="78dp"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:text="TBILISI"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="70sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="78dp"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:text="The weather in Tbilisi is sunny but you will die without me"
            android:textColor="#000000"
            android:textSize="20sp" />


    </LinearLayout>

</LinearLayout>
